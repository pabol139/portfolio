---
import Clock from "./Clock";
import Reminder from "./Reminders.astro";
---

<div
  class="-ml-[1px] md:ml-0 shrink-0 [font-family:_system-ui] w-full h-full max-w-[380px] aspect-[380/192] md:max-w-[340px] bg-transparent md:p-2 rounded-[19px] select-none"
>
  <div
    class="w-full h-full bg-[#6D6D6D] p-[3px] rounded-[15px] shadow-secondBox"
  >
    <div
      class="w-full h-full bg-[#0A0A0A] rounded-[12px] overflow-auto flex gap-1"
    >
      <Clock client:load />
      <Reminder />
    </div>
  </div>
</div>
